{% extends '@admin/layout.html.twig' %}

{% block title "Editer l'article" %}

{% block body %}
    <h1>Editer l'article {{ item.name }}</h1>
    <form action="{{ path(routePrefix ~ '.edit', {id: item.id}) }}" method="post">
        {% include viewPath ~ '/form.html.twig' %}
        <input type="hidden" name="_method" value="PUT">
        <button class="btn btn-primary" type="submit">Editer</button>
    </form>
{% endblock %}