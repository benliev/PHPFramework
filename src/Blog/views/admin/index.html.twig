{% extends '@admin/layout.html.twig' %}

{% block title "Editer les articles" %}

{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.name }}</td>
                <td>
                    <a href="{{ path('admin.blog.edit', {id: item.id}) }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ paginate(posts, 'admin.blog.index') }}
{% endblock %}